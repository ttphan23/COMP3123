        "body": {
          "mode": "raw",
          "raw": "{\n  \"content\": {\n    \"noteTitle\": \"Sample Note Title\",\n    \"noteDescription\": \"Sample Note Description\",\n    \"priority\": \"HIGH\",\n    \"dateAdded\": \"07/Oct/2025\",\n    \"dateUpdated\": \"07/Oct/2025\"\n  }\n}"
        },
        "url": {
          "raw": "http://localhost:8081/api/notes",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["api", "notes"]
        }
      }
    },
    {
      "name": "Get All Notes",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8081/api/notes",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["api", "notes"]
        }
      }
    },
    {
      "name": "Get Note by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8081/api/notes/{{noteId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["api", "notes", "{{noteId}}"]
        }
