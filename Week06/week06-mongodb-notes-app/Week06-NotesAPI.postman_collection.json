        },
        "url": {
          "raw": "http://localhost:8081/api/notes/{{noteId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["api", "notes", "{{noteId}}"]
        }
      }
    },
    {
      "name": "Delete Note",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "http://localhost:8081/api/notes/{{noteId}}",
